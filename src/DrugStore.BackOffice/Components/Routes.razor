@using DrugStore.BackOffice.Components.Layout
@using DrugStore.BackOffice.Components.Pages
@using Microsoft.AspNetCore.Components.Authorization
<CascadingAuthenticationState>
    <Router AppAssembly="typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(MainLayout)">
                <NotAuthorized>
                    <RedirectToLogin/>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <RadzenRow>
                    <RadzenColumn Size="12" Style="margin-top: 5rem; margin-bottom: 5rem">
                        <RadzenText Text="Page not found"
                                    TextAlign="TextAlign.Center"
                                    TextStyle="TextStyle.DisplayH1"
                                    Style="margin: 0; margin-bottom: 2rem"/>
                        <RadzenText Text="Sorry, but there's nothing here!"
                                    TextStyle="TextStyle.H6"
                                    TextAlign="TextAlign.Center"
                                    Style="margin: 0"
                                    TagName="TagName.P"/>
                    </RadzenColumn>
                </RadzenRow>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>