<RadzenPanel AllowCollapse="true" Style="margin-bottom: 20px;">
    <RadzenPanelTitle>
        Error
    </RadzenPanelTitle>
    <RadzenPanelContent>
        <RadzenStack Orientation="Orientation.Vertical">
            <RadzenAlert IsOpen="true" Severity="NotificationSeverity.Error">
                <RadzenAlertTitle>
                    Error
                </RadzenAlertTitle>
                <RadzenAlertMessage>
                    @string.Join(Environment.NewLine, ErrorMessages)
                </RadzenAlertMessage>
            </RadzenAlert>
        </RadzenStack>
    </RadzenPanelContent>
</RadzenPanel>

@code {
    [Parameter] public List<string> ErrorMessages { get; set; } = [];
}